        <script>
                document.addEventListener('DOMContentLoaded', function () {
        var form = document.getElementById('myForm');

        form.addEventListener('submit', function (event) {
            // Validation for name
            var nameInput = document.getElementById('contact-name');
            var nameValue = nameInput.value.trim();
            if (containsNumbers(nameValue)) {
                displayErrorMessage('name-error', 'Name should not contain numbers.');
                event.preventDefault();
                return;
            } else {
                hideErrorMessage('name-error');
            }

            // Validation for email
            var emailInput = document.getElementById('contact-email');
            var emailValue = emailInput.value.trim();
            if (!isValidEmail(emailValue)) {
                displayErrorMessage('email-error', 'Please enter a valid email address.');
                event.preventDefault();
                return;
            } else {
                hideErrorMessage('email-error');
            }

            // Validation for number
            var phoneInput = document.getElementById('contact-phone');
            var phoneValue = phoneInput.value.trim();
            if (!isValidPhoneNumber(phoneValue)) {
                displayErrorMessage('phone-error', 'Please enter valid phone number (7 to 15 digits)');
                event.preventDefault();
                return;
            } else {
                hideErrorMessage('phone-error');
            }
        });

        function containsNumbers(input) {
            // Regular expression to check if the input contains any numbers
            var numberRegex = /\d/;
            return numberRegex.test(input);
        }

        function isValidEmail(email) {
            // Regular expression for a simple email validation
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function isValidPhoneNumber(phone) {
            // Regular expression for a simple phone number validation
            var phoneRegex = /^\d{7,15}$/;
            return phoneRegex.test(phone);
        }

        function displayErrorMessage(id, message) {
            var errorElement = document.getElementById(id);
            if (errorElement) {
                errorElement.innerText = message;
                errorElement.style.display = 'block';
            }
        }

        function hideErrorMessage(id) {
            var errorElement = document.getElementById(id);
            if (errorElement) {
                errorElement.style.display = 'none';
            }
        }
    });
        </script>

